@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "addLanguage";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title></title>

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet">

</head>
<body>

    <footer>
        <br />
        <br />
        <br />
        <br />

        <div class="top-content">

            <div class="inner-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3 form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Add Topic</h3>
                                    <p></p>
                                </div>

                            </div>
                            <div class="form-bottom">

                                <form role="form" action="~/Admin/addTopictoDb" method="post" class="login-form" enctype="multipart/form-data">

                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Language Name</label>
                                        <input type="text" name="lang_name" placeholder="Language Name" class="form-username form-control" id="form-username" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-email">Topic Name</label>
                                        <input type="text" name="Topic_name" placeholder="Topic Name" class="form-email form-control" id="form-email" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Topic Definition</label>
                                        <textarea rows="5" name="topic_def" class="form-group form-control" placeholder="Topic Def" required data-validation-required-message="Please enter a def."></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-code">Topic Code</label>
                                        <textarea rows="5" name="topic_code" class="form-group form-control" placeholder="Topic Code" required data-validation-required-message="Please enter a code."></textarea>

                                    </div>
                                    <div class="form-group">
                                        <label for="form-output">output File</label>
                                        <input type="file" name="output" id="form-out">
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="Add" />

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>